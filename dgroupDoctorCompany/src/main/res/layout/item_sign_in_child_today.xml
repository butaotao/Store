<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myrotate="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="10dp"

    android:background="@color/content_background"
    android:id="@+id/divider1"
    android:orientation="horizontal"></LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/ll_sign_tag"
                    android:layout_below="@+id/divider1"
                    android:gravity="center"

                     >

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_leftcor_all"
                        android:text="@string/null_info"
                        android:gravity="center"

                        android:textColor="@color/white"
                        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider1"
        android:layout_toRightOf="@+id/ll_sign_tag"
        android:background="@drawable/btn_whtie_sub_all"
        android:paddingLeft="10dp"

        android:gravity="center_vertical"
        android:orientation="vertical">
                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_time"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        >
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:id="@+id/iv_clock"
                            android:background="@drawable/clock_icon"/>
                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_toRightOf="@+id/iv_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:text="10:00"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_444444"
                        android:textSize="16sp" />
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_time"
                        android:id="@+id/rl_address"
                        >
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:id="@+id/iv_location_ioon"
                            android:background="@drawable/location_ioon"/>
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginLeft="3dp"
                        android:text="kexing"
                        android:layout_toRightOf="@id/iv_location_ioon"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_444444"
                        android:textSize="16sp"/>
                    </RelativeLayout>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_address"
    android:id="@+id/rl_des"
    android:layout_marginTop="3dp"
    >
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/iv_note"

        android:layout_marginBottom="10dp"
        android:background="@drawable/note"/>
    <ImageView
        android:layout_width="26dp"
        android:layout_height="36dp"
        android:id="@+id/iv_editor"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/editor_icon"/>
    <TextView
        android:id="@+id/tvdes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingBottom="15dp"
        android:text="kexing"
        android:layout_toLeftOf="@+id/iv_editor"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/iv_note"
        android:textColor="@color/color_444444"
        android:textSize="16sp"/>

</RelativeLayout>
    </RelativeLayout>
                </LinearLayout>
</RelativeLayout>