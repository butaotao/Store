<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/web_qr_login_back"
        android:layout_margin="5dp"
        android:textSize="17sp"
        android:textColor="@color/color_3cbaff"
        android:text="@string/返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/web_qr_login_computer"
        android:src="@drawable/computer"
        android:layout_marginTop="179dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/web_qr_login_text"
        android:textColor="#8e9fae"
        android:layout_marginTop="20dp"
        android:layout_below="@id/web_qr_login_computer"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="确认登入药企圈工作台"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/web_qr_login_confirm"
        android:background="@drawable/web_qr_login_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="458dp"
        android:textColor="@color/color_3cbaff"
        android:textSize="19sp"
        android:gravity="center"
        android:text="登入"
        android:layout_width="150dp"
        android:layout_height="38dp"/>
    <TextView
        android:id="@+id/web_qr_login_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/web_qr_login_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#999999"
        android:textSize="15sp"
        android:text="取消登入"
        />

</RelativeLayout>