<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_titlebar"
        layout="@layout/layout_parent_titlebar_groupcompany"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >
<ImageView
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:background="@drawable/shownowphone"
    android:id="@+id/iv_alert"/>
        <TextView
            android:id="@+id/tel_txt"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_alert"
            android:textColor="@color/color_aaaaaa"
            android:text="当前登录手机号："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tel_txt"
            android:drawablePadding="5dp"
            android:textColor="@color/blue_3cbaff"
            android:text=""
            android:textSize="16sp" />
    </RelativeLayout>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="18dp"
        android:password="true"
        android:textColor="@color/gray_333333"
        android:hint="请输入登录密码"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？请"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/link_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_3cbaff"
            android:text="@string/link_serv"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp" />
    </LinearLayout>


    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_blue_all_9ddcff"
        android:text="下一步"
        android:textColor="@color/first_bg_title"/>
</LinearLayout>