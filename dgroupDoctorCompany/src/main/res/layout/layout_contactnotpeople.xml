<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="17dp"
    android:background="@color/normal_bg"
    android:paddingRight="17dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_notcontent"
    android:textColor="@color/color_666666"
    android:layout_marginTop="10dp"
    android:text="获取通讯录失败，原因可能为："/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notcontent_des"
        android:layout_below="@+id/tv_notcontent"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_aaaaaa"
        android:text="1、应用没有权限访问您的通讯录。你可以先退出应用，在系统设置或者手机安全软件中授权应用访问通讯录。"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_notcontent_des"
    android:textColor="@color/color_aaaaaa"
    android:id="@+id/textline2"
    android:text="2、手机通讯录中没有联系人的资料。"
     />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/textline2"
        android:layout_height="70dp"></RelativeLayout>
</RelativeLayout>
