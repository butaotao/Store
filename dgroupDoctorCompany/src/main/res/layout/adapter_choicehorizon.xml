<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:gravity="center"
    android:id="@+id/tv_departparent"
    android:text="@string/null_info"
    android:minWidth="50dp"
    android:singleLine="true"
    android:maxWidth="120dp"
    android:ellipsize="end"
    android:layout_centerInParent="true"
    />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/viewred"
        android:minWidth="50dp"
        android:background="@color/color_3cbaff"
        android:layout_below="@+id/tv_departparent"
        android:layout_alignLeft="@+id/tv_departparent"
        android:layout_alignStart="@+id/tv_departparent"
        android:layout_alignRight="@+id/tv_departparent"
        android:layout_alignEnd="@+id/tv_departparent"></View>
</RelativeLayout>
