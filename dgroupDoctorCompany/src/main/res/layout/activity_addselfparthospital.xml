<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background">
    <include layout="@layout/layout_parent_titlebar_groupcompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_parent_titlebar_groupcompany"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/layout_parent_titlebar_groupcompany"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"

        android:background="@color/white"
        android:id="@+id/rl_medicinename">
    <RelativeLayout
     android:layout_width="match_parent"

     android:layout_height="match_parent"
     android:background="@drawable/list_mediemanager"
    >
  <TextView android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"

      android:singleLine="true"
      android:ellipsize="end"
      android:textColor="@color/color_333333"
      android:textSize="17sp"
      android:text="@string/null_info"
      android:id="@+id/tv_mediename"
      android:gravity="center_vertical"
      ></TextView>
    </RelativeLayout>
 </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:id="@+id/rl_sure"
       android:background="@color/white"
       android:gravity="center_vertical"
       android:layout_alignParentBottom="true"
       >

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/btn_sure"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="完成"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_blue_all_3cbaff"
       />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:id="@+id/rl_cancel"
           android:orientation="horizontal">
           <Button
               android:layout_width="0dp"
               android:layout_height="45dp"
               android:layout_weight="1"
               android:id="@+id/btn_cancelleft"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="20dp"
               android:text="保存"
               android:textSize="16sp"
               android:visibility="gone"
               android:textColor="@color/white"
               android:layout_centerVertical="true"
               android:background="@drawable/btn_blue_all_3cbaff"
               />
           <Button
               android:layout_width="0dp"
               android:layout_height="45dp"
               android:layout_weight="1"
               android:id="@+id/btn_cancelright"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="10dp"
               android:text="取消分管品种"
               android:textSize="16sp"

               android:textColor="@color/white"
               android:layout_centerVertical="true"
               android:background="@drawable/btn_red_all_f95442"
               />
       </LinearLayout>
   </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/rl_sure"
        android:id="@+id/line1"
        android:background="@color/divide_line_color"></View>
<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/rl_medicinename"
    android:layout_above="@id/line1"
    android:scrollbars="none"
    android:divider="@color/translate"
    android:id="@+id/listview"></ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_notcontent"
        android:layout_below="@id/rl_medicinename">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/color_aaaaaa"
            android:gravity="center_horizontal"
            android:text="请添加分管医院"
            android:drawableTop="@drawable/hospital"
            />
    </RelativeLayout>
</RelativeLayout>
