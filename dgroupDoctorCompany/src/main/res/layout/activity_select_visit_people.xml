<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_titlebar">
        <include
            android:id="@+id/layout_titlebar"
            layout="@layout/layout_parent_titlebar_groupcompany"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="17sp"
            android:textColor="@color/color_3cbaff"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btSure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="确认拜访"
        android:textColor="@color/white"
        android:background="@drawable/botton"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36dp"
        android:visibility="invisible"
        android:layout_below="@+id/rl_titlebar"
        android:layout_above="@+id/btSure"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/rl_titlebar">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:background="#6d3cbaff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/adress_white"
                            android:layout_centerVertical="true"
                            android:id="@+id/iv_position"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="100dp"
                            android:layout_toRightOf="@+id/iv_position"
                            android:text="@string/null_info"
                            android:gravity="left|center"
                            android:textSize="14sp"
                            android:ellipsize="end"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"/>
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重选地点"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="6dp"
                            android:textSize="14sp"
                            android:id="@+id/btn_choiceposition"
                            android:textColor="@color/white"
                            android:background="@drawable/bulk_white"
                            android:layout_alignParentRight="true"
                            ></Button>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/people"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="22dp"/>
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/yaoping"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="22dp"/>
                        <TextView
                            android:id="@+id/tvMediea"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="暂无"
                            android:singleLine="true"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvTimeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="@color/red_fc7d30"
                        android:text=""
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="@color/red_fc7d30"
                        android:text="s"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                     <com.dachen.dgroupdoctorcompany.views.RadarViewGroup
                        android:id="@+id/radarViewGroup"
                         android:layout_marginTop="5dp"
                         android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="360dp">
                        <com.dachen.dgroupdoctorcompany.views.RadarView
                            android:id="@+id/id_scan_circle"
                            android:layout_width="match_parent"
                            android:layout_height="360dp"/>
                        <ImageView
                            android:id="@+id/ivPicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"/>
                   </com.dachen.dgroupdoctorcompany.views.RadarViewGroup>

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>



    <TextView
        android:id="@+id/tvSure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/red_fc7d30"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:text="确认"
        android:layout_marginBottom="15dp"
        android:visibility="gone"/>

</RelativeLayout>