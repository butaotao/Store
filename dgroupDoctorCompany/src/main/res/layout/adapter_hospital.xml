<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_docotorname"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_irr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:background="@drawable/ic_right_arrow" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_irr"
            android:ellipsize="end"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_666666"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_companycontact"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_headicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/head_icon" />

        <TextView
            android:id="@+id/namedoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_location"
            android:layout_alignStart="@+id/tv_location"
            android:layout_alignTop="@+id/iv_headicon"
            android:text="@string/null_info"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_location"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/namedoctor"
            android:layout_toRightOf="@+id/namedoctor"
            android:background="@drawable/btn_blue_all_3cbaff"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="客户拜访"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namedoctor"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_headicon"
            android:ellipsize="end"
            android:maxEms="13"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_aaaaaa"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_location"
            android:layout_alignBottom="@+id/tv_location"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/tv_location"
            android:layout_toRightOf="@+id/tv_location"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_aaaaaa"
            android:textSize="12sp" />


    </RelativeLayout>

    <View
        android:id="@+id/layout_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="@color/color_grayline1dp" />

    <View
        android:id="@+id/layout_line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/color_grayline1dp" />
</LinearLayout>
