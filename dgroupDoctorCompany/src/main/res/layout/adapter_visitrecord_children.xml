<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/rl_line1"
        android:visibility="gone" >

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_line1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/null_info"
        android:id="@+id/tv_time"

        android:textColor="@color/color_3cbaff"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"/>


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/cirrecord"
        android:layout_marginLeft="11dp"
        android:id="@+id/iv_cir"
        android:layout_toRightOf="@+id/tv_time"
        android:layout_toEndOf="@+id/tv_time"
        android:layout_marginStart="11dp" />
    <RelativeLayout
        android:layout_width="15dp"
        android:layout_height="wrap_content"

        android:id="@+id/line"
        android:layout_below="@+id/iv_cir"
        android:layout_alignLeft="@+id/iv_cir"
        android:layout_alignStart="@+id/iv_cir">
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="67dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/line1"
            android:background="@color/color_dividerline"></RelativeLayout>
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="54dp"
            android:id="@+id/line2"

            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:background="@color/color_dividerline"></RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@drawable/btn_blue_all_3cbaff"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/null_info"
        android:id="@+id/tv_gowork"
        android:gravity="center"
        android:textColor="@color/white"

        android:layout_alignBottom="@+id/tv_time"
        android:layout_toRightOf="@+id/iv_cir"
        android:layout_toEndOf="@+id/iv_cir" />
    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/iv_groupleader"
        android:layout_below="@+id/tv_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_cir"
        android:background="@drawable/ic_default_head"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/null_info"
        android:singleLine="true"
        android:layout_marginRight="15dp"
        android:id="@+id/tv_name"
        android:layout_marginTop="30dp"

        android:layout_toRightOf="@+id/iv_groupleader"
        android:textColor="@color/color_666666"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/null_info"
        android:singleLine="true"
        android:id="@+id/tv_place"
        android:layout_toRightOf="@+id/iv_groupleader"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tv_name"
        android:textColor="@color/color_666666"
        android:layout_marginLeft="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/iv_groupleader"
            android:layout_marginTop="10dp"
            android:id="@+id/rl_horizon"
            android:layout_alignLeft="@+id/iv_groupleader"
            android:layout_alignStart="@+id/iv_groupleader">
    <com.dachen.dgroupdoctorcompany.views.HorizontalListView
        android:layout_width="match_parent"
        android:id="@+id/horizonlistview"
        android:layout_height="45dp"

      >

    </com.dachen.dgroupdoctorcompany.views.HorizontalListView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide_line_color"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:id="@+id/itemline"
            android:layout_below="@+id/line"></RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
