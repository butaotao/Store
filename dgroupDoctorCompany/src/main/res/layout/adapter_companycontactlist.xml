<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_add1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_background"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/divide_line_color"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_depart"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <RadioButton
            android:id="@+id/btn_radio"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_radio"
            android:button="@null"
            android:clickable="false"
            android:focusable="false" />
        <TextView
            android:id="@+id/tv_depart"
            android:layout_toRightOf="@+id/btn_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxEms="14"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_right_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_add"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_background"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_color"></View>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_people"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="10dp">




        <ImageView
            android:id="@+id/head_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/head_icon" />
        <TextView
            android:id="@+id/tv_name_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/leader_position"
            android:layout_alignStart="@+id/leader_position"
            android:layout_alignTop="@+id/head_icon"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name_leader"
            android:layout_alignBottom="@+id/tv_name_leader"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_name_leader"
            android:background="@drawable/btn_blue_all_3cbaff"
            android:ellipsize="end"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:id="@+id/leader_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_leader"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/head_icon"
            android:text="@string/null_info"
            android:textColor="@color/color_aaaaaa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="未激活"
            android:textColor="@color/color_aaaaaa"
            android:textSize="14sp"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:visibility="gone"
            android:background="@drawable/editcustomer"
             />
    </RelativeLayout>
</LinearLayout>
