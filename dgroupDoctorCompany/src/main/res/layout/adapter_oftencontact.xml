<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_companycontact"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_headicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/head_icon" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_headicon"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/iv_headicon"
            android:layout_toRightOf="@+id/iv_headicon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_customervisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@drawable/btn_blue_all_3cbaff"
            android:ellipsize="end"
            android:maxEms="8"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_frenddes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_headicon"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:ellipsize="end"
            android:maxEms="13"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_aaaaaa"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_customerposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_headicon"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/tv_frenddes"
            android:layout_toRightOf="@+id/tv_frenddes"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"

            android:text="@string/null_info"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="@color/color_grayline1dp" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_grayline1dp" />

    </RelativeLayout>

</LinearLayout>
