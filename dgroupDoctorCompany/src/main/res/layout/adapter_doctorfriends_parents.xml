<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/rl_parents"
    >
<ImageView
    android:layout_width="14dp"
    android:layout_height="14dp"
    android:layout_centerVertical="true"
    android:id="@+id/iv_down_close"
    android:layout_marginLeft="7dp"
    android:padding="10dp"
    android:visibility="gone"
    android:background="@drawable/down_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:id="@+id/tv_num"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/color_cccccc"
        android:layout_alignParentRight="true"
        android:text="@string/null_info"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:paddingRight="15dp"/>
    <ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/tv_num"
        android:id="@+id/iv_guanli"
        android:visibility="gone"
        android:layout_marginRight="5dp"
    android:background="@drawable/guanli_select"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/iv_guanli"
        android:textColor="@color/color_aaaaaa"
        android:text="@string/null_info"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:id="@+id/tv_hospitalname"
        android:layout_toRightOf="@id/iv_down_close"
        android:layout_marginLeft="15dp"

        />

</RelativeLayout>
