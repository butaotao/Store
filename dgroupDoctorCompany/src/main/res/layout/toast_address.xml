<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/callphonebackground"
    android:layout_marginTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_icon"  />
    <RelativeLayout
        android:layout_width="60dp"

        android:id="@+id/rl_delete"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"

            android:background="@drawable/callphonedialogclose" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/null_info"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_icon"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/null_info"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_name"
        android:textColor="@color/color_cccccc"

        android:textSize="20sp" />
    <TextView
        android:id="@+id/tv_comefrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自药企圈"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_position"
        android:textColor="@color/color_cccccc"

        android:textSize="20sp" />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/null_info"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_comefrom"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</RelativeLayout>